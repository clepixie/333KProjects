@model Team1_FinalProject.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}
@*add deleting tiket as an option*@
<h2>Edit Your Ticket for @Model.Showing.Movie.Title on @(Model.Showing.StartDateTime).  </h2>
<hr />
<h4>Change @Model.SeatNumber to:</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketID" />
            <div class="form-group">
                <label class="control-label">Seats Available:</label>
                @Html.DropDownList("SelectedSeat", (SelectList)ViewBag.AllSeats, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Checkout" asp-controller="Orders">Back to Shopping Cart</a>
</div>

