@model Team1_FinalProject.Models.ReportViewModel

@{
    ViewData["Title"] = "CustomerSearch";
}

<h1>Search by Customer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplayCustomerReport">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <a asp-action="Index" asp-controller="Reports" class="btn btn-primary">Back</a>
        </form>
    </div>
</div>