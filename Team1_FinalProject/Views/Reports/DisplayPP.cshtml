@*model Team1_FinalProject.Models.ReportViewModel *@

@{
    ViewData["Title"] = "Display Popcorn Points Report";
}

<h1>Display Report</h1>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Movie Title
            </th>
            <th>
                Showing Date and Time
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Customer Email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ticket t in ViewBag.pptickets)
        {
        <tr>
            <td>
                @Html.DisplayFor(model => t.Order.Date)
            </td>
            <td>
                @Html.DisplayFor(model => t.Showing.Movie.Title)
            </td>
            <td>
                @t.Showing.StartDateTime.ToString("MM/dd/yyyy") - @Html.DisplayFor(model => t.Showing.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(model => t.Order.Customer.FirstName) @Html.DisplayFor(model => t.Order.Customer.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => t.Order.Customer.UserName)
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Create a New Report</a>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>