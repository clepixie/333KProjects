@model Team1_FinalProject.Models.CustomerReportViewModel

@{
    ViewData["Title"] = "DisplayCustomerReport";
}

<h1>Display Customer Report</h1>

    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    OrderID
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Order Total
                </th>
                <th>
                    Popcorn Points Used
                </th>
                <th>
                    Order History
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Order o  in ViewBag.CustomerOrders)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => o.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(model => o.Customer.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => o.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => o.PostDiscount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => o.PopcornPointsUsed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => o.OrderHistory)
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-8">
            <h5>Customer Summary</h5>
            <table class="table table-sm table-bordered" style="width:30%">

                <tr>
                    <td>Total Seats Sold:</td>
                    <td>@Html.DisplayFor(model => model.SeatsSold)</td>
                </tr>
                <tr>
                    <td>Total Revenue:</td>
                    <td>@Html.DisplayFor(model => model.TotalRevenue)</td>
                </tr>
                <tr>
                    <td>Popcorn Points Used:</td>
                    <td>@Html.DisplayFor(model => model.PopcornPointsUsed)</td>
                </tr>
            </table>
        </div>
    </div>



<div>
    <a asp-action="Index">Create a New Report</a>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

