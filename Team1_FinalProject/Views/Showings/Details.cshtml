@model Team1_FinalProject.Models.Showing

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Showing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date:
        </dt>
        <dd class="col-sm-10">
            @Model.StartDateTime.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDateTime):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialEvent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialEvent)
        </dd>
        <dt class="col-sm-2">
            Tickets Available:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketCount)/20
        </dd>
        <dt class="col-sm-2">
            Ticket Price:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price.PriceValue)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            @if (User.IsInRole("Customer"))
            {
                <a asp-action="Create" asp-controller="Ticket" asp-route-showingID="@Model.ShowingID" class="btn btn-primary col-sm-2">Purchase Tickets</a>
            }
            else
            {
                <a asp-action="CreateFor" asp-controller="Ticket" asp-route-showingID="@Model.ShowingID" class="btn btn-primary col-sm-2">Purchase Tickets For a Customer</a>
            }
        }
    </dl>
</div>
