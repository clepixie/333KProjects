@model Team1_FinalProject.Models.Showing

@{
    ViewData["Title"] = "Copy";
}

<style>
    input[type="radio"] {
        position: relative;
        left: 3px;
        margin-left: 20px;
    }

    input[type="checkbox"] {
        position: relative;
    }

    label[type="cblabel"] {
        position: relative;
        right: 16px;
    }
</style>

<h1>Copy Showings</h1>

<h4>Showing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CopySchedule">
            @Html.ValidationSummary(true, "", new { @style = "color: red" })
            <div class="form-group">
                SelectedTheaterFrom
                <label class="control-label">Copy Showings From</label>
                @Html.DropDownList("SelectedDateFrom", (SelectList)ViewBag.FromDays, new { @class = "form-control" })
                @Html.DropDownList("SelectedTheaterFrom", (SelectList)ViewBag.FromRoom, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">To</label>
                @Html.DropDownList("SelectedDateTo", (SelectList)ViewBag.ToDays, new { @class = "form-control" })
                @Html.DropDownList("SelectedTheaterTo", (SelectList)ViewBag.ToRoom, new { @class = "form-control" })
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

