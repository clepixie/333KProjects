@model Team1_FinalProject.Models.SearchViewModel

@{
    ViewData["Title"] = "Movie Search";
}

<style>
    input[type="radio"] {
        position: relative;
        left: 3px;
        margin-left: 20px;
    }
</style>

<h1>Select Search Method</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchMoviesShowings">
            <div class="form-group">
                <label asp-for="MovieShowing" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="MovieShowing" value="@Select.Movie" /> By Movie Info<br />
                <input type="radio" class="radio" asp-for="MovieShowing" value="@Select.Showing" /> By Showings Date<br />
                <span asp-validation-for="MovieShowing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

