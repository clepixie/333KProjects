@model IEnumerable<Team1_FinalProject.Models.MovieReview>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie Reviews</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead style="text-align:center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieRating)/5
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieReviewID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovieReviewID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieReviewID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
