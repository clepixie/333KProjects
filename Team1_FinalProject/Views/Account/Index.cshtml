@model IndexViewModel
@{
    ViewBag.Title = "Change Info";
}

<h1>@ViewBag.Title.</h1>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Birthday:</dt>
        <dd>@Model.Birthdate</dd>
        <dd>
            [@Html.ActionLink("Change your birthdate", "ChangeBirthdate")]
        </dd>

        <dt>Address:</dt>
        <dd>@Model.Address</dd>
        <dd>
            [@Html.ActionLink("Change your address", "ChangeAddress")]
        </dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>
        <dd>
            [@Html.ActionLink("Change your phone number", "ChangePhoneNumber")]
        </dd>

        <dt>Password:</dt>
        <dd>
            [@Html.ActionLink("Change your password", "ChangePassword")]
        </dd>
        @if (User.IsInRole("Customer"))
        {
            <dt>Popcorn Points:</dt>
            <dd>
                @ViewBag.UserInfo.PopcornPoints
            </dd>
        }
    </dl>
</div>
@if (User.IsInRole("Employee"))
{
    <a asp-action="IndexCustomer" asp-controller="Account" class="btn btn-success">Customer Master List</a>
}